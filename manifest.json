{
	"name": "JiraDone",
	"version": "0.0.2",
	"description": "Extension to remove done items from backlog",
	"permissions": [
		"storage",
		"declarativeContent",
		"tabs",
		"webNavigation",
		"activeTab",
		"*://*.atlassian.net/jira/*"
	],
	"content_scripts": [{
		"run_at" : "document_idle",
		"matches": ["*://*.atlassian.net/jira/*"],
		"js": ["remover.js"],
		"css": ["remover.css"]
	}],

	"background": {
		"scripts": ["main.js"]
	},
	"manifest_version": 2
}
