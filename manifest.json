{
	"name": "JiraDone",
	"version": "0.0.1",
	"description": "Extension to remove done items from backlog",
	"permissions": [
		"storage",
		"declarativeContent",
		"activeTab"
	],
	"content_scripts": [{
		"run_at" : "document_idle",
		"matches": ["*://*.atlassian.net/jira/*backlog"],
		"js": ["remover.js"],
		"css": ["remover.css"]
	}],
	"background": {
		"scripts": ["main.js"],
		"persistent": false
	},
	"manifest_version": 2
}
